{
  "name": "@swan-io/indexed-db",
  "version": "0.1.0",
  "license": "MIT",
  "description": "A resilient, Future-based key-value store for IndexedDB",
  "author": "Mathieu Acthernoene <mathieu.acthernoene@swan.io>",
  "homepage": "https://github.com/swan-io/indexed-db",
  "repository": {
    "type": "git",
    "url": "https://github.com/swan-io/indexed-db.git"
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "idb",
    "indexed-db",
    "indexeddb",
    "key-value",
    "keyval",
    "store",
    "storage",
    "boxed",
    "future"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "yarn clean && microbundle -f cjs,es",
    "clean": "rm -rf dist",
    "dev": "microbundle watch",
    "format": "prettier '**/*' -u -w",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext ts ./src",
    "test:install-deps": "playwright install-deps chromium firefox webkit",
    "test:e2e": "playwright test",
    "test:unit": "vitest run",
    "test": "yarn test:e2e && yarn test:unit",
    "test:ci": "CI=true yarn test",
    "prepack": "yarn typecheck && yarn lint && yarn test && yarn build"
  },
  "browserslist": [
    ">0.2%",
    "not op_mini all",
    "not dead",
    "safari >= 12"
  ],
  "prettier": {
    "trailingComma": "all"
  },
  "dependencies": {
    "@swan-io/boxed": "^1.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.32.3",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "fake-indexeddb": "^4.0.1",
    "jsdom": "^21.1.1",
    "microbundle": "^0.15.1",
    "playwright": "^1.32.3",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  }
}
